{
  "manifest_version": 3,
  "name": "YouTube Tools",
  "version": "1.1.0",
  "description": "Download YouTube live chat messages and fetch channel live stream IDs using browser cookies, mimicking yt-dlp functionality",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://music.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Tools"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/@*",
        "https://www.youtube.com/channel/*",
        "https://www.youtube.com/user/*"
      ],
      "js": ["channel-content.js"],
      "run_at": "document_idle"
    }
  ]
}
